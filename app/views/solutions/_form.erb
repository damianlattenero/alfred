<% error = @solution.errors.key?(:file) && @solution.errors[:file].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label I18n.translate('solutions.form.file'), :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :file, :class => 'input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:file) : "Ex: a simple text" %></span>
  </div>
</fieldset>
<%= f.hidden_field :account_id %>
<% error = @solution.errors.key?(:assignment_id) && @solution.errors[:assignment_id].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label I18n.translate('solutions.form.assignment'), :class => 'control-label' %>
  <div class='controls'>
    <%= f.select :assignment_id, :collection => assignments, :fields => [ :name, :id ], :class => 'input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:assignment_id) : "Ex: a simple text" %></span>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:solutions, :index), :class => 'btn' %>
</div>
